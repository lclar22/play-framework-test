# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                			 	controllers.MainController.index
POST    /cuenta                 		controllers.BancoController.addBanco
POST    /cuenta_update             		controllers.BancoController.updateBanco
GET     /cuentas         				controllers.BancoController.getBancos
GET     /cuentas/all       				controllers.BancoController.list()
GET     /cuenta_example_action         	controllers.BancoController.getExampleAction(name: String)
GET     /cuenta_example_action_2        controllers.BancoController.getExampleAction_2(name: String)
GET     /cuenta_example_action_3        controllers.BancoController.getExampleAction_3(name: String)
GET     /account_names         			controllers.BancoController.getBankNames
GET     /cuentas_view         			controllers.BancoController.index
GET     /cuentas_update/:id        		controllers.BancoController.index_update(id: Long)
GET     /cuentas/:id 					controllers.BancoController.getCuentaById(id: Long)
GET     /cuentas_show/:id 				controllers.BancoController.show_view(id: Long)

POST    /insumo                 		controllers.InsumoController.addInsumo
GET     /insumos         				controllers.InsumoController.getInsumos
GET     /insumos_view         			controllers.InsumoController.index

POST    /productor                 		controllers.ProductorController.addProductor
GET     /productores         			controllers.ProductorController.getProductores
GET     /productores_view         		controllers.ProductorController.index

POST    /proveedor                 		controllers.ProveedorController.addProveedor
GET     /proveedores         			controllers.ProveedorController.getProveedores
GET     /proveedores_view         		controllers.ProveedorController.index

POST    /reporte                 		controllers.ReporteController.addReporte
GET     /reportes         				controllers.ReporteController.getReportes
GET     /reportes_view         			controllers.ReporteController.index

GET     /transaccion_view               controllers.TransaccionController.getTransaccionView
GET     /transaccion_list               controllers.TransaccionController.getTransaccionListView
POST    /transaccion                 	controllers.TransaccionController.addTransaccion
GET     /transacciones         			controllers.TransaccionController.getTransacciones
GET     /transacciones_view    			controllers.TransaccionController.index

POST    /veterinario                 	controllers.VeterinarioController.addVeterinario
GET     /veterinarios         			controllers.VeterinarioController.getVeterinarios
GET     /veterinarios_view     			controllers.VeterinarioController.index

GET     /clientes                    	controllers.ClienteController.getClientes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
